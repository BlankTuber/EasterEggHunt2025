<!DOCTYPE html>
<html lang="no">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Musikk-identifikasjon</title>
        <link rel="stylesheet" href="/css/style.css" />
    </head>
    <body>
        <div class="container">
            <div class="game-header">
                <h1>Musikk-identifikasjon</h1>
            </div>

            <div class="game-content game-area" style="display: none">
                <div class="game-header">
                    <h2>Gjenkjenn musikken</h2>
                    <div class="game-score">
                        <span>Poeng: <span id="score">0</span>/10</span>
                    </div>
                </div>

                <div class="music-container">
                    <div class="player-controls">
                        <button id="playButton" class="btn">
                            <span>▶ Spill musikk</span>
                        </button>
                        <audio id="musicPlayer" style="display: none"></audio>
                    </div>

                    <h3 style="margin-top: 20px">Velg riktig alternativ:</h3>
                    <div id="musicOptions" class="music-options">
                        <!-- Fylles dynamisk med JS -->
                    </div>

                    <div
                        id="feedbackMessage"
                        class="message"
                        style="display: none; margin-top: 20px"
                    ></div>
                </div>

                <div class="game-instructions">
                    <h3>Instruksjoner:</h3>
                    <p>
                        Lytt til musikklippet og velg hvilket spill (eller annet
                        innhold) musikken tilhører.
                    </p>
                    <p>Du trenger 10 riktige for å vinne!</p>
                </div>
            </div>
        </div>

        <!-- Win modal -->
        <div id="winModal" class="modal">
            <div class="modal-content">
                <h2 class="modal-title">Gratulerer!</h2>
                <p id="winMessage"></p>
                <button class="btn close-modal">Lukk</button>
            </div>
        </div>

        <script>
            // Win modal functionality
            function showWinMessage(message) {
                document.getElementById("winMessage").textContent = message;
                document.getElementById("winModal").classList.add("visible");
            }

            document.addEventListener("DOMContentLoaded", function () {
                document
                    .querySelector(".close-modal")
                    .addEventListener("click", function () {
                        document
                            .getElementById("winModal")
                            .classList.remove("visible");
                    });
            });
        </script>

        <!-- Game configuration data -->
        <script type="application/json" id="gameConfigData">
            <%- JSON.stringify(gameConfig) %>
        </script>

        <script src="/js/music.js"></script>
    </body>
</html>
