<!DOCTYPE html>
<html lang="no">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Silhuett-identifikasjon</title>
        <link rel="stylesheet" href="/css/style.css" />
    </head>
    <body>
        <div class="container">
            <div class="game-header">
                <h1>Silhuett-identifikasjon</h1>
            </div>

            <div class="game-content game-area" style="display: none">
                <div class="game-header">
                    <h2>Gjett karakteren/objektet</h2>
                    <div class="game-score">
                        <span>Poeng: <span id="score">0</span>/10</span>
                    </div>
                </div>

                <div class="silhouette-container">
                    <img
                        id="silhouetteImage"
                        class="silhouette-image"
                        src=""
                        alt="Silhuett"
                    />

                    <form id="guessForm" class="silhouette-form">
                        <input
                            type="text"
                            id="guessInput"
                            placeholder="Skriv inn ditt svar..."
                            required
                        />
                        <button type="submit" class="btn">Gjett</button>
                    </form>

                    <div
                        id="feedbackMessage"
                        class="message"
                        style="display: none"
                    ></div>
                </div>

                <div class="game-instructions">
                    <h3>Instruksjoner:</h3>
                    <p>
                        Gjett objektet/karakteren basert på silhuetten. Du
                        trenger 10 riktige for å vinne!
                    </p>
                </div>
            </div>
        </div>

        <!-- Win modal -->
        <div id="winModal" class="modal">
            <div class="modal-content">
                <h2 class="modal-title">Gratulerer!</h2>
                <p id="winMessage"></p>
                <button class="btn close-modal">Lukk</button>
            </div>
        </div>

        <script>
            // Win modal functionality
            function showWinMessage(message) {
                document.getElementById("winMessage").textContent = message;
                document.getElementById("winModal").classList.add("visible");
            }

            document.addEventListener("DOMContentLoaded", function () {
                document
                    .querySelector(".close-modal")
                    .addEventListener("click", function () {
                        document
                            .getElementById("winModal")
                            .classList.remove("visible");
                    });
            });
        </script>

        <!-- Game configuration data -->
        <script type="application/json" id="gameConfigData">
            <%- JSON.stringify(gameConfig) %>
        </script>

        <script src="/js/silhouette.js"></script>
    </body>
</html>
