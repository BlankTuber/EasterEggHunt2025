<!DOCTYPE html>
<html lang="no">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Fargesekvens Utfordring</title>
        <link rel="stylesheet" href="/css/style.css" />
    </head>
    <body>
        <div class="container">
            <div class="game-header">
                <h1>Fargesekvens Utfordring</h1>
                <a href="/" class="btn">Tilbake</a>
            </div>

            <div class="game-content game-area" style="display: none">
                <div class="game-header">
                    <h2>Fargesekvens</h2>
                    <div class="game-score">
                        <span>Nivå: <span id="levelCount">1</span>/7</span>
                    </div>
                </div>

                <div class="sequence-display">
                    <h3>Følg med på sekvensen</h3>
                    <p id="statusText">Se på sekvensen nøye...</p>
                </div>

                <div class="color-sequence">
                    <button class="color-btn red" data-color="red"></button>
                    <button class="color-btn blue" data-color="blue"></button>
                    <button class="color-btn green" data-color="green"></button>
                    <button
                        class="color-btn yellow"
                        data-color="yellow"
                    ></button>
                    <button
                        class="color-btn purple"
                        data-color="purple"
                    ></button>
                </div>

                <div class="game-controls">
                    <button id="startBtn" class="btn">Start sekvens</button>
                    <button id="resetBtn" class="btn" style="display: none">
                        Tilbakestill
                    </button>
                </div>

                <div
                    id="feedbackMessage"
                    class="message"
                    style="display: none"
                ></div>

                <div class="game-instructions">
                    <h3>Instruksjoner:</h3>
                    <p>
                        Følg med på fargesekvensen, og gjenta den deretter i
                        riktig rekkefølge ved å klikke på fargene.
                    </p>
                    <p>
                        Hvert nivå legger til flere farger i sekvensen. Fullfør
                        alle 7 nivåer for å vinne!
                    </p>
                </div>
            </div>
        </div>

        <!-- Win modal -->
        <div id="winModal" class="modal">
            <div class="modal-content">
                <h2 class="modal-title">Gratulerer!</h2>
                <p id="winMessage"></p>
                <button class="btn close-modal">Lukk</button>
            </div>
        </div>

        <script>
            // Win modal functionality
            function showWinMessage(message) {
                document.getElementById("winMessage").textContent = message;
                document.getElementById("winModal").classList.add("visible");
            }

            document.addEventListener("DOMContentLoaded", function () {
                document
                    .querySelector(".close-modal")
                    .addEventListener("click", function () {
                        document
                            .getElementById("winModal")
                            .classList.remove("visible");
                    });
            });
        </script>

        <!-- Game configuration data -->
        <script type="application/json" id="gameConfigData">
            <%- JSON.stringify(gameConfig) %>
        </script>

        <script src="/js/colorseq.js"></script>
    </body>
</html>
